<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.pt.javaeats.dashboardReservarMesas.dashboardReservarMesasController">
    <children>
        <ComboBox fx:id="comboBoxMesas" layoutX="200.0" layoutY="200.0" prefHeight="50.0" prefWidth="200.0" promptText="Selecionar mesa" style="-fx-background-color: #67c2ff; -fx-background-radius: 15; -fx-font-size: 16">
        </ComboBox>
        <DatePicker fx:id="datePicker" layoutX="200.0" layoutY="300.0" prefHeight="50.0" prefWidth="200.0" promptText="Selecionar data" style="-fx-background-color: #67c2ff; -fx-font-size: 16"/>
        <Spinner fx:id="timeSpinner" layoutX="200.0" layoutY="400.0" prefHeight="50.0" prefWidth="200.0" promptText="Selecionar hora" style="-fx-background-color: #67c2ff; -fx-font-size: 16" />
        <Button layoutX="200.0" layoutY="500.0" mnemonicParsing="false" onAction="#selecionarDataHora" onMouseClicked="#reservarMesa" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #1ce856; -fx-background-radius: 15;" text="Reservar">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Button layoutX="500.0" layoutY="500.0" mnemonicParsing="false" onMouseClicked="#cancelarReservarMesa" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #f2463a; -fx-background-radius: 15;" text="Cancelar Reserva">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <ComboBox fx:id="comboBoxMesasReservadas" layoutX="500.0" layoutY="300.0" prefHeight="50.0" prefWidth="200.0" promptText="Selecionar Reserva" style="-fx-background-color: #67c2ff; -fx-background-radius: 15 ; -fx-font-size: 16" />
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="300.0" layoutY="0.0" prefHeight="50.0" prefWidth="300.0" style="-fx-border-radius: 15; -fx-background-radius: 15; -fx-background-color: #CFCFCF;" text="Gerir Reservas">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
